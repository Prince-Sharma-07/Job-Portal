model Company {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  companyName        String
  companyDescription String
  companyOwnerId     String  @unique @db.ObjectId
  companyLogo        String?
  owner              User    @relation(fields: [companyOwnerId], references: [id])
}
